doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title websocket-chat
        link(rel="stylesheet" href="/libs/materialize-css/css/materialize.min.css" media="screen,projection")
        link(rel="stylesheet" href="/client.min.css")

    body

        nav(class="blue")
            div(class="nav-wrapper container")
                a(href="/" class="brand-logo center") websocket-chat

        .container
            div(id="chat-box" class="card-panel chat-box blue z-depth-2")

            div(class="card-panel purple darken-2")
                div(class="input-field white-text")
                    input(type="text" id="message" placeholder="Type your message here and press Enter to send..." autofocus="true")

        script(src="/libs/jquery.min.js")
        script(src="/libs/materialize-css/js/materialize.min.js")
        script(src="/client.min.js")
